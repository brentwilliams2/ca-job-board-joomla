<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site" method="upgrade">
  <name>mfi</name>
  <version>0.1</version>
  <creationDate>May, 2018</creationDate>
  <author>Calligraphic</author>
  <authorEmail>support@calligraphic.design</authorEmail>
  <authorUrl>http://www.calligraphic.design</authorUrl>
  <copyright>Copyright 2018 (c) calligraphic.design</copyright>
  <license>GPLv2</license>
  <description>TPL_MFI_XML_DESCRIPTION</description>

  <files>
    <filename>changelog.txt</filename>
    <filename>component.php</filename>
    <filename>error.php</filename>
    <filename>favicon.ico</filename>
    <filename>index.html</filename>
    <filename>index.php</filename>
    <filename>offline.php</filename>
    <filename>README.md</filename>
    <filename>template_preview.png</filename>
    <filename>template_thumbnail.png</filename>
    <filename>templateDetails.xml</filename>
    <folder>_partials</folder>
    <folder>css</folder>
    <folder>fonts</folder>
    <folder>html</folder>
    <folder>images</folder>
    <folder>includes</folder>
    <folder>js</folder>
    <folder>language</folder>
    <folder>scss</folder>
    <folder>vendor</folder>
  </files>

  <!-- @TODO: Need to server images / css /js out of media folder rather than template -->

  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.tpl_mfi.ini</language>
    <language tag="en-GB">en-GB/en-GB.tpl_mfi.sys.ini</language>
  </languages>

	<positions>
    <position>top</position>
    <position>introtext</position>
    <position>feature</position>
    <position>menutop</position>
    <position>breadcrumbs</position>
    <position>left-leading</position>
    <position>left-main</position>
    <position>left-trailing</position>
    <position>right-leading</position>
    <position>right-main</position>
    <position>right-trailing</position>
    <position>newsflash</position>
    <position>content-leading</position>
    <position>content-main</position>
    <position>content-trailing</position>
    <position>bottom</position>
    <position>footer</position>
    <position>copyright</position>
    <position>debug</position>
	</positions>

	<config>
    <fields name="params">
      <fieldset name="basic">

        <!-- LEFT COLUMN WIDTH-->
        <field
          name="leftColumnWidth"
          type="list" default="3"
          label="Left Column Width"
          description="Choose a width for your left column"
        >
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </field>

        <!-- RIGHT COLUMN WIDTH-->
        <field
          name="rightColumnWidth"
          type="list"
          default="3"
          label="Right Column Width"
          description="Choose a width for your right column"
        >
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </field>

        <!-- SHOW FRONTPAGE-->
        <field name="frontpageshow"
          type="radio"
          class="btn-group"
          default="1"
          label="Show FrontPage Articles"
          description="Show FrontPage Articles"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <!-- MODERNIZR-->
        <field
          name="modernizr"
          type="radio"
          class="btn-group"
          default="0"
          label="Modernizr"
          description="Enable JavaScript modernizr.js in head"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <!-- FONT-AWESOME -->
        <field
          name="fontawesome"
          type="radio"
          class="btn-group"
          default="0"
          label="Font Awesome"
          description="Enable Font Awesome for better icons in Bootstrap"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <!-- PIE-->
        <field
          name="pie"
          type="radio"
          class="btn-group"
          default="0" label="PIE"
          description="Enable PIE (CSS3 for IE 9+8)"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <!-- SASS-->
        <field
          name="compile_sass"
          type="radio"
          class="btn-group"
          default="0"
          label="Compile Sass"
          description="Do you want to enable Sass compilation)"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
      </fieldset>

      <!-- LOGO-->
      <fieldset  name="logo" type="upload_func" label="Logo">

        <field name="logo_file" type="media"
          label="Select your logo:"
        />

        <field
          name="logo_link"
          type="text"
          label="Logo link:" 
          description="Example: http://www.masterbootstrap.com"
          default="index.php"
        />

        <field
          name="logo_width"
          type="text" label="Logo width:"
          description="Example: 90"
          default="173"
        />

        <field
          name="logo_height"
          type="text"
          label="Logo height:"
          description="Example: 90" default="26"
        />

      </fieldset>

      <!-- GOOGLE FONTS-->      
      <fieldset name="Font" label="Fonts">

        <field
          name="googleFont"
          type="radio"
          class="btn-group btn-group-yesno"
          default="0"
          label="Google Font for Headings"
          description="Google Font for H1, H2, H3, etc"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <field
          name="googleFontName"
          class="" type="text"
          default="Open+Sans"
          label="Font Name"
          description="Font Name"
          showon="googleFont:1"
        />

        <field
          name="bodyFont"
          class="btn-group btn-group-yesno"
          type="radio"
          default="0"
          label="Google Font for Body"
          description="Google Font for Body"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <field
          name="bodyFontName"
          type="text" 
          default="Open+Sans"
          label="Font Name"
          description="Font Name"
          showon="bodyFont:1"/>

        <field
          name="navigationFont"
          class="btn-group btn-group-yesno"
          type="radio"
          default="0"
          label="Google Font for Menu"
          description="Google Font for Menu"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <field
          name="navigationFontname"
          type="text"
          default="Open+Sans"
          label="Font Name"
          description="Font Name"
          showon="navigationFont:1"
        />

      </fieldset>

      <!-- LAYOUT -->
      <fieldset name="Layout" label="Layout Options">

        <field
          name="layout"
          type="radio"
          class="btn-group"
          default="full"
          label="Layout"
          description="Select Full Layout or Boxed Layout"
        >
          <option value="full">Full Layout</option>
          <option value="boxed">Boxed Layout</option>
        </field>

      </fieldset>
		</fields>
  </config>
</extension>