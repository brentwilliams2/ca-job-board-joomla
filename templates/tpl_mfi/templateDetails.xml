<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="3.5" type="template" method="upgrade">
	<name>mfi</name>
	<creationDate>August 2018</creationDate>
	<author>Kevin Brown</author>
	<copyright>Copyright Â© 2018 Calligraphic</copyright>
	<authorEmail>kbrown@calligraphic.design</authorEmail>
	<authorUrl>http://www.calligraphic.design</authorUrl>
	<version>0.0.1</version>
	<description>
    <![CDATA[
      <h1>MFI</h1>
      <p>Template for Multi-Family Insiders using Bootstrap v3</p>
    ]]>
  </description>

	<files>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>includes</folder>
		<folder>js</folder>
    <folder>language</folder>
		<folder>scss</folder>
		<filename>component.php</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
	</files>

  <positions>
    <position>top</position>
    <position>navigation</position>
    <position>fullwidth</position>
    <position>showcase</position>
    <position>feature</position>
    <position>breadcrumbs</position>
    <position>left</position>
    <position>right</position>
    <position>content-top</position>
    <position>content-bottom</position>
    <position>bottom</position>
    <position>footer</position>
    <position>copyright</position>
    <position>menuslider</position>
    <position>debug</position>
	</positions>

	<config>
		<fields name="params">
			<fieldset name="basic">
        <!-- LEFT COLUMN WIDTH-->
				<field
          name="leftColumnWidth"
          type="list"
          default="3"
          label="TPL_MFI_PARAMS_LEFT_COLUMN_WIDTH_LABEL"
          description="TPL_MFI_PARAMS_LEFT_COLUMN_WIDTH_DESC"
        >
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>

        <!-- RIGHT COLUMN WIDTH-->
				<field
          name="rightColumnWidth"
          type="list"
          default="3"
          label="TPL_MFI_PARAMS_RIGHT_COLUMN_WIDTH_LABEL"
          description="TPL_MFI_PARAMS_RIGHT_COLUMN_WIDTH_DESC"
        >
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</field>

				<!-- SHOW FRONTPAGE-->
				<field
          name="frontpageshow"
          type="radio"
          class="btn-group"
          default="1"
          label="TPL_MFI_PARAMS_SHOW_FRONT_PAGE_LABEL"
          description="TPL_MFI_PARAMS_SHOW_FRONT_PAGE_DESC"
        >
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<!-- MODERNIZR-->
				<field
          name="modernizr"
          type="radio"
          class="btn-group"
          default="0"
          label="TPL_MFI_PARAMS_MODERNIZR_LABEL"
          description="TPL_MFI_PARAMS_MODERNIZR_DESC"
        >
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<!-- GLYPHICONS -->
				<field name="glyphicons"
          type="radio"
          class="btn-group"
          default="0"
          label="TPL_MFI_PARAMS_LOAD_GLYPHICONS_LABEL"
          description="TPL_MFI_PARAMS_LOAD_GLYPHICONS_DESC"
        >
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

  				<!-- FONT-AWESOME -->
				<field
          name="fontawesome"
          type="radio"
          class="btn-group"
          default="1"
          label="TPL_MFI_PARAMS_LOAD_FONTAWESOME_LABEL"
          description="TPL_MFI_PARAMS_LOAD_FONTAWESOME_DESC"
        >
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<!-- PIE-->
				<field
          name="pie"
          type="radio"
          class="btn-group"
          default="0"
          label="TPL_MFI_PARAMS_PIE_LABEL"
          description="TPL_MFI_PARAMS_PIE_DESC"
        >
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>

			<!-- LOGO-->
			<fieldset
        name="logo"
        type="upload_func"
        label="Logo"
      >
        <field
          name="logo_file"
          type="media"
          label="TPL_MFI_PARAMS_LOGO_FILE_LABEL"
          description="TPL_MFI_PARAMS_LOGO_FILE_DESC"
        />

        <field
          name="logo_link"
          type="text"
          label="TPL_MFI_PARAMS_LOGO_LINK_LABEL"
          description="TPL_MFI_PARAMS_LOGO_LINK_DESC"
          default="index.php"
        />

        <field
          name="logo_width"
          type="text"
          label="TPL_MFI_PARAMS_LOGO_WIDTH_LABEL"
          description="TPL_MFI_PARAMS_LOGO_WIDTH_DESC"
          default="173"
        />

        <field
          name="logo_height"
          type="text"
          label="TPL_MFI_PARAMS_LOGO_HEIGHT_LABEL"
          description="TPL_MFI_PARAMS_LOGO_HEIGHT_DESC"
          default="26"
        />
			</fieldset>

			<!-- GOOGLE FONTS-->
			<fieldset name="Font" label="Fonts">
        <field
          name="googleFont"
          type="radio"
          class="btn-group btn-group-yesno"
          default="0"
          label="TPL_MFI_PARAMS_LOAD_GOOGLE_FONT_LABEL"
          description="TPL_MFI_PARAMS_LOAD_GOOGLE_FONT_DESC"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <field
          name="googleFontName"
          class=""
          type="text"
          default="Open+Sans"
          label="TPL_MFI_PARAMS_GOOGLE_FONT_NAME_LABEL"
          description="TPL_MFI_PARAMS_GOOGLE_FONT_NAME_DESC"
          showon="googleFont:1"
        />

        <field
          name="bodyFont"
          class="btn-group btn-group-yesno"
          type="radio"
          default="0"
          label="TPL_MFI_PARAMS_GOOGLE_BODY_FONT_LABEL"
          description="TPL_MFI_PARAMS_GOOGLE_BODY_FONT_DESC"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <field
          name="bodyFontName"
          type="text"
          default="Open+Sans"
          label="TPL_MFI_PARAMS_GOOGLE_FONT_NAME_LABEL"
          description="TPL_MFI_PARAMS_GOOGLE_FONT_NAME_DESC"
          showon="bodyFont:1"
        />

        <field
          name="navigationFont"
          class="btn-group btn-group-yesno"
          type="radio"
          default="0"
          label="TPL_MFI_PARAMS_GOOGLE_NAVIGATION_FONT_LABEL"
          description="TPL_MFI_PARAMS_GOOGLE_NAVIGATION_FONT_DESC"
        >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>

        <field
          name="navigationFontname"
          type="text"
          default="Open+Sans"
          label="TPL_MFI_PARAMS_GOOGLE_NAVIGATION_FONT_NAME_LABEL"
          description="TPL_MFI_PARAMS_GOOGLE_NAVIGATION_FONT_NAME_DESC"
          showon="navigationFont:1"
        />
      </fieldset>

		</fields>
	</config>
</extension>
