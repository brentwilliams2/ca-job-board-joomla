<?xml version="1.0" encoding="UTF-8"?>
<fof>
  <!-- Common settings -->
	<common></common>

  <backend>

    <!-- Set up the namespace for concrete, specialised classes -->
    <container>
      <option name="componentNamespace"><![CDATA[Calligraphic\Cajobboard\Admin]]></option>
      <option name="factoryClass"><![CDATA[FOF30\Factory\MagicFactory]]></option>
    </container>

    <!-- Set the default view for backend -->
		<dispatcher>
			<option name="defaultView">items</option>
		</dispatcher>

    <!-- Model configuration -->
		<model name="Items">
			<config>
				<option name="contentType">com_cajobboard.item</option>
			</config>

      <!-- Behaviour setup. Use merge="1" to merge with already defined behaviours. -->
			<behaviors merge="1">Tags, Filters</behaviors>
		</model>

	</backend>

	<frontend>

    <!-- Set the default view for frontend -->
		<dispatcher>
			<option name="defaultView">items</option>
		</dispatcher>

		<container>
      <option name="componentNamespace"><![CDATA[Calligraphic\Cajobboard\Site]]></option>
			<option name="factoryClass"><![CDATA[FOF30\Factory\SwitchFactory]]></option>
		</container>

	</frontend>
</fof>
