<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
  <name>com_cajobboard</name>
  <creationDate>May 2018</creationDate>
  <author>Kevin Brown</author>
  <authorEmail>kbrown@calligraphic.design</authorEmail>
  <authorUrl>http://www.calligraphic.design</authorUrl>
  <copyright>Copyright (c) 2018 Calligraphic. All rights reserved.</copyright>
  <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
  <version>0.0.1</version>
  <description>COM_CAJOBBOARD_XML_DESCRIPTION</description>

  <scriptfile>cajobboard.script.php</scriptfile>

  <install>
    <sql>
      <file driver="mysql" charset="utf8">sql/com_cajobboard.employerreviews.install.sql</file>
      <file driver="mysql" charset="utf8">sql/com_cajobboard.jobpostings.install.sql</file>
      <file driver="mysql" charset="utf8">sql/com_cajobboard.media.install.sql</file>
      <file driver="mysql" charset="utf8">sql/com_cajobboard.organizations.install.sql</file>
      <file driver="mysql" charset="utf8">sql/com_cajobboard.places.install.sql</file>
      <file driver="mysql" charset="utf8">sql/com_cajobboard.ucm.install.sql</file>
      <file driver="mysql" charset="utf8">sql/com_cajobboard.utilities.install.sql</file>
    </sql>
  </install>

  <uninstall>
    <sql>
      <file driver="mysql" charset="utf8">sql/com_cajobboard.uninstall.sql</file>
    </sql>
  </uninstall>

  <update>
    <schemas>
      <schemapath type="mysql">sql/updates</schemapath>
    </schemas>
  </update>

  <media destination="com_calligraphic" folder="media">
    <folder>css</folder>
    <folder>images</folder>
    <folder>js</folder>
  </media>

  <files folder="site">
    <filename>index.html</filename>
    <filename>cajobboard.php</filename>
    <folder>language</folder>
    <folder>Model</folder>
    <folder>View</folder>
    <folder>views</folder>
  </files>

  <administration>
    <menu link='index.php?option=com_cajobboard'>COM_CAJOBBOARD</menu>
    <submenu>
      <menu view="viewname">COM_CAJOBBOARD_SUBMENU_JOBPOSTINGS</menu>
    </submenu>

    <files folder="admin">
      <filename>access.xml</filename>
      <filename>config.xml</filename>
      <filename>fof.xml</filename>
      <filename>index.html</filename>
      <filename>cajobboard.php</filename>
      <filename>cajobboard.xml</filename>
      <folder>Form</folder>
      <folder>language</folder>
      <folder>sql</folder>
      <folder>View</folder>
    </files>
  </administration>

</extension>