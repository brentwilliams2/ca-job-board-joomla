  <version>0.0.1</version>
  <description>PLG_SYSTEM_CAJOBBOARD_XML_DESCRIPTION</description>

  <files>
    <filename plugin="cajobboard">cajobboard.php</filename>
    <filename>index.html</filename>
    <folder>language</folder>
  </files>

  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="search_limit" type="text"
          default="50"
          description="PLG_CAJOBBOARD_OPTION1_DESC"
          label="PLG_CAJOBBOARD_OPTION1_LABEL"
          size="5"
        />

        <field name="search_content" type="radio"
          default="0"
          description="PLG_CAJOBBOARD_OPTION2_DESC"
          label="PLG_CAJOBBOARD_OPTION2_LABEL"
        >
          <option value="0">JOFF</option>
          <option value="1">JON</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>